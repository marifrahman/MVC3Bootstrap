<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/bootstrap/css/bootstrap.min.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/bootstrap/css/bootstrap-responsive.min.css")" rel="stylesheet"
        type="text/css" />
    <style type="text/css">
      body 
      {
         font-family:Georgia;  
        padding-top: 60px;
        padding-bottom: 40px;
      }
    </style>

</head>
<body>
    

    <div class="navbar navbar-inverse navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container">
          <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </a>
          <a class="brand" href="#">MVC3Bootstrap</a>
          <div class="nav-collapse collapse">
            <ul class="nav">
                <li class="@(ViewBag.Active == "Home" ? "active" : "")">
                    @Html.ActionLink("Home", "Index", "Home")
                </li>
                <li class="@(ViewBag.Active == "About" ? "active" : "")">
                    @Html.ActionLink("About", "About", "Home")
                </li>
            </ul>
            
          </div><!--/.nav-collapse -->
          <div id="logindisplay">
                @Html.Partial("_LogOnPartial")
          </div>
        </div>
      </div>
    </div>

    <div class="container">
        @RenderBody()
    
      <hr>

      <footer>
        <p>&copy; Company 2012</p>
      </footer>

    </div> <!-- /container -->







    <script src="@Url.Content("~/Scripts/jquery-1.7.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/bootstrap/bootstrap.min.js")" type="text/javascript"></script>
</body>
</html>